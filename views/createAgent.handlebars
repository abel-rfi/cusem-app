{{#each errorT}}
<div class='done-txt' style="background-color: rgb(255, 139, 139);">
    {{text}}
</div>
{{/each}}
<div class="top-place">
    <div class="name-pls">
        <div class="agent-name" name="agentName">
            Name
        </div>
        <div class="agent-id" name="id">
        </div>
        <div class="bank-name">
            BANK NAME
        </div>
    </div>
    <div class="form-header">
        <div class="borrder-info">
            Agent Information
        </div>
    </div>
</div>

<form class="data-agent" method="post">
    <div class="info-side">
        <div class='field input'>
            <label>name</label>
            <input type='text' name="name" placeholder="Name" required></input>
        </div>
        <div class='field input'>
            <label>email</label>
            <input type="email" name="email" placeholder="Email" required></input>
        </div>
        <div class='field input'>
            <label>password</label>
            <input type='password' id="password" name="password" placeholder="password" required></input>
            <div class="show" id="show" onclick="show()">hide</div>
        </div>
    </div>

    <div class="info-side">
        <div class='field input'>
            <label>phone</label>
            <input type='text' name="phone" placeholder="phone" required></input>
        </div>
        <div class='field input'>
            <label>address</label>
            <input type='text' name="address" placeholder="address" required></input>
        </div>
    </div>

    <div class="btn-pls">
        <button type="submit"> Create </button>

        <a class="exit" href="/agent-list-page?id={{agentId}}&token={{ticket}}"> exit </a>
    </div>
</form>

