<!-- Content Start -->
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">Ticket Archieve</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
                <div class="breadcrumbs-top float-md-right">
                    <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active">Ticket Archieve</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered mb-0">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Client</th>
                                            <th>Agent</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each Tickets}}
                                        <tr>
                                            <th scope="row">{{id}}</th>
                                            <th>{{'user.name'}}</th>
                                            {{#if 'employee.name'}}
                                                <th>{{'employee.name'}}</th>
                                                {{else}}
                                                <th>None</th>
                                            {{/if}}
                                            <th>{{complaintStatus}}</th>
                                            <th class="d-flex" style="justify-content: space-evenly;">
                                                {{#ifEquals complaintStatus 'Open'}}
                                                <button id="{{id}}" class="historyChat btn btn-icon btn-primary disabled" data-toggle="modal" data-target="#historyModal" disabled><i class='bx bx-history'></i></button>
                                                {{/ifEquals}}
                                                {{#ifEquals complaintStatus 'Taken'}}
                                                <button id="{{id}}" class="historyChat btn btn-icon btn-primary" data-toggle="modal" data-target="#historyModal"><i class='bx bx-history'></i></button>
                                                {{/ifEquals}}
                                                {{#ifEquals complaintStatus 'Hold'}}
                                                <button id="{{id}}" class="historyChat btn btn-icon btn-primary" data-toggle="modal" data-target="#historyModal"><i class='bx bx-history'></i></button>
                                                {{/ifEquals}}
                                                {{#ifEquals complaintStatus 'Closed'}}
                                                <button id="{{id}}" class="historyChat btn btn-icon btn-primary" data-toggle="modal" data-target="#historyModal"><i class='bx bx-history'></i></button>
                                                {{/ifEquals}}
                                                <button class="btn btn-icon btn-danger"><i class='bx bx-trash' ></i></button>
                                            </th>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Content End -->

<!-- Modal Start -->
<div class="modal fade" id="historyModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Forward Inbox</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="historyMonitor" class="container border rounded p-1 text-white live-chat-monitor">
                    <div class="chat left bg-primary">
                        Lorem, ipsum dolor sit amet consectetur adipisicing elit. Deleniti, fuga.
                    </div>
                    <div class="chat right chat-client bg-light text-dark">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal End -->

